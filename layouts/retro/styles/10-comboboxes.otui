ComboBox < UIComboBox
  font: verdana-11px-antialised
  color: #c0c0c0
  opacity: 1.0
  size: 91 23
  text-offset: -20 2
  text-align: center
  image-source: /images/ui/combo_bg
  image-border: 1
  image-clip: 0 0 98 40

  $on:
    image-clip: 0 40 98 40

  $disabled:
    color: #c0c0c088
    opacity: 0.8
  
  Panel
    id: btn
    anchors.top: parent.top
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    image-source: /images/ui/combo_btn
    image-clip: 0 0 20 20
    image-border: 1

    $on:
      image-clip: 0 20 20 20

