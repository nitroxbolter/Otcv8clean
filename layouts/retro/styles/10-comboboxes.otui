ComboBoxPopupScrollMenuButton < UIButton
  height: 17
  font: verdana-11px-monochrome
  text-align: left
  text-offset: 4 1
  color: #c0c0c0
  background-color: alpha

  $hover !disabled:
    color: #ffffff
    background-color: #ffffff22

  $disabled:
    color: #c0c0c088

ComboBoxPopupScrollMenu < UIPopupScrollMenu
  image-source: /images/ui/combo_bg
  image-border: 1
  image-clip: 0 40 98 40

